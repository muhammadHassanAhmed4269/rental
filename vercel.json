{
  "version": 2,
  "builds": [
    {
      "src": "client/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/build/**",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "client/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ],
  "commands": {
    "build": {
      "use": "@now/static-build",
      "src": "client",
      "hooks": {
        "build": "npm run build --prefix client"
      }
    }
  }
}
